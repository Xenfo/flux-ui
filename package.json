{
  "name": "flux-ui",
  "private": true,
  "author": "Samuel Corsi-House <chouse.samuel@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Xenfo/flux-ui.git"
  },
  "workspaces": [
    "docs/",
    "packages/*"
  ],
  "scripts": {
    "postinstall": "is-ci || husky install",
    "commit": "cz",
    "new": "plop",
    "check": "tsc --noEmit",
    "turbo": "FORCE_COLOR=1 turbo",
    "build": "run turbo run build",
    "dev": "run turbo run dev",
    "lint": "run turbo run lint",
    "publish": "run turbo run publish",
    "format": "prettier -w .",
    "test": "vitest",
    "upgrade": "run swc-node scripts/upgrade.mts",
    "release": "run swc-node scripts/release.mts",
    "sb:start": "storybook dev -p 6006 --no-open",
    "sb:build": "storybook build",
    "chromatic": "chromatic --build-script-name=sb:build",
    "swc-node": "INIT=$INIT_CWD node -r @swc/register -r ./scripts/utils/prerun.ts"
  },
  "resolutions": {
    "glob-parent": ">=6.0.2",
    "minimist": ">=1.2.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@commitlint/cz-commitlint": "^17.5.0",
    "@ianvs/prettier-plugin-sort-imports": "^3.7.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@storybook/addon-essentials": "^7.0.0",
    "@storybook/addon-interactions": "^7.0.0",
    "@storybook/addon-links": "^7.0.0",
    "@storybook/blocks": "^7.0.0",
    "@storybook/react": "^7.0.0",
    "@storybook/react-vite": "^7.0.0",
    "@swc/core": "^1.3.44",
    "@swc/register": "^0.1.10",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/eslint": "^8.37.0",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "@vitejs/plugin-react": "^3.1.0",
    "@vitest/coverage-c8": "^0.29.8",
    "autoprefixer": "^10.4.14",
    "chalk": "^5.2.0",
    "chromatic": "^6.17.2",
    "commitizen": "^4.3.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-storybook": "^0.6.11",
    "execa": "^7.1.1",
    "fs-extra": "^11.1.1",
    "globby": "^13.1.3",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "jsdom": "^21.1.1",
    "lint-staged": "^13.2.0",
    "lodash": "^4.17.21",
    "minimist": "^1.2.8",
    "npm-check-updates": "^16.9.0",
    "plop": "^3.1.2",
    "postcss": "^8.4.21",
    "prettier": "^2.8.7",
    "prettier-plugin-tailwindcss": "^0.2.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^3.20.2",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-swc3": "^0.8.1",
    "storybook": "^7.0.0",
    "storybook-dark-mode-v7": "^3.0.0-alpha.0",
    "tailwindcss": "^3.3.1",
    "turbo": "^1.8.8",
    "typescript": "^4.9.5",
    "vite": "^4.2.1",
    "vite-tsconfig-paths": "^4.0.7",
    "vitest": "^0.29.8"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "packageManager": "yarn@3.5.0"
}
