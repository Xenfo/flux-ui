{
  "$schema": "https://turborepo.com/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "publish": {
      "dependsOn": ["lint"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "watch": {
      "cache": false
    },
    "dev": {
      "cache": false
    }
  }
}
