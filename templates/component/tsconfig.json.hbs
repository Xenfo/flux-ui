{
  "display": "{{capitalize name}}",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "importHelpers": true,
    "paths": {
      "@flux-ui/*": ["packages/*/src"]
    }
  },
  "exclude": ["node_modules", "lib"],
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../hooks"
    }
  ]
}
